<%- include("./partials/header") %>
<div class="container ">
  <div class="row justify-content-center pt-4">
    <h1>Make new  todo</h1>
  </div>
  <div class="row">
    <div class="form">
      <form action="/" method="POST" >
        <div class="form-group">
          <label >Todo</label>
          <input class="form-control" required type="text" name="todo[todo]" placeholder="kill voldemort">
        </div>
        <div class="form-group">
          <label>Finishing Date</label>
          <input class="form-control" required type="date" name="todo[date]">
        </div>
        <div class="form-group">
          <button class="btn btn-md btn-success btn-block">Make Todo!</button>
        </div>
      </form>
      <a href="/">Back</a>
    </div>
  </div>
</div>

<%-include("./partials/footer") %>
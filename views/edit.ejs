<%- include("./partials/header") %>
<div class="container ">
  <div class="row justify-content-center pt-4">
    <h1>Edit todo</h1>
  </div>
  <div class="row">
    <div class="form">
      <form action="<%=`/${todo._id}?_method=PUT`%> " method="POST" >
        <div class="form-group">
          <label >Todo</label>
          <textarea cols="7" rows="5"class="form-control" required type="text" name="todo" ><%= todo.todo %> </textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-md btn-success btn-block">Edit Todo!</button>
        </div>
      </form>
      <a href="/">Back</a>
    </div>
  </div>
</div>

<%-include("./partials/footer") %>